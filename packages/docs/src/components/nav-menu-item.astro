---
export interface Props {
  href: string;
}

const props = Astro.props;
const path = Astro.url.pathname;

const pathIsActive = props.href === path || props.href + '/' === path;
---

<li>
  <a
    class:list={[
      "border-l pl-2 py-2 leading-8 hover:border-l-gray-400",
      pathIsActive ? "font-bold text-blue-600 border-l-blue-400" : "font-normal",
    ]}
    href={props.href}
  >
    <slot />
  </a>
</li>