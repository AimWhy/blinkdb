---
import Logo from './logo.astro';

export interface Props {
  condensed?: boolean;
  class?: string;
}

const props: Props = Astro.props;
---

<div class:list={["fixed top-0 left-0 w-full backdrop-blur bg-white/75", props.condensed && "border-b", props.class]}>
  <navbar class:list={["flex justify-between items-center p-2", props.condensed && "mx-auto sm:max-w-7xl"]}>
    <a href="/" class="flex items-center gap-1">
      <Logo class="h-12" />
      <span class="text-xl font-semibold">blinkDB</span>
    </a>
    <a href="/docs" class="p-2 font-semibold text-gray-800 transition-colors duration-75 hover:text-blue-500">Docs</a>
  </navbar>
</div>