---
import GithubIcon from './icons/github-icon.astro';
import NpmIcon from './icons/npm-icon.astro';
import Logo from './logo.astro';

export interface Props {
  condensed?: boolean;
  class?: string;
}

const props: Props = Astro.props;
---

<div class:list={["fixed top-0 left-0 h-16 w-full backdrop-blur bg-white/75", props.condensed && "border-b", props.class]}>
  <navbar class:list={["flex justify-between items-center px-3 py-2", props.condensed && "mx-auto sm:max-w-7xl"]}>
    <a href="/" class="flex items-center gap-1">
      <Logo class="h-12 w-12" />
      <span class="text-xl font-semibold">blinkDB</span>
    </a>
    <div class="flex items-center text-gray-800 divide-x">
      <div class="px-3">
        <a href="/docs" class="p-2 font-semibold transition-colors duration-75 hover:text-blue-500">Docs</a>
      </div>
      <div class="px-3 flex gap-4">
        <a href="https://www.npmjs.com/package/blinkdb"><NpmIcon class="h-6 w-6" /></a>
        <a href="https://github.com/blinkdb-js/blinkdb"><GithubIcon class="h-6 w-6" /></a>
      </div>
    </div>
  </navbar>
</div>