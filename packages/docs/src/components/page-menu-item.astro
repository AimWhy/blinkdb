---
export interface Props {
  href: string;
  indent: number;
}

const props = Astro.props;
const className = {
  1: "font-bold",
  2: "ml-3",
  3: "ml-6",
  4: "ml-9",
  5: "ml-12"
}[props.indent]
---

<a class="hover:text-gray-600" href={props.href}>
  <div class={"py-0.5 " + className}><slot /></div>
</a>